<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:foregroundTint="#C8C2CE"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/v60_background"
        android:layout_width="272dp"
        android:layout_height="384dp"
        android:alpha="0.8"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/bg_black_v60" />

    <ImageButton
        android:id="@+id/lockButton"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="#000000"
        android:foregroundTint="#1885F6"
        android:scaleX="1.4"
        android:scaleY="1.4"
        app:tint="#C9C3CF"
        app:layout_constraintBottom_toBottomOf="@+id/v60_background"
        app:layout_constraintEnd_toEndOf="@+id/v60_background"
        app:layout_constraintHorizontal_bias="0.762"
        app:layout_constraintStart_toStartOf="@+id/v60_background"
        app:layout_constraintTop_toTopOf="@+id/v60_background"
        app:layout_constraintVertical_bias="0.94"
        app:srcCompat="@android:drawable/ic_lock_idle_lock" />

    <ImageButton
        android:id="@+id/preconditionButton"
        android:layout_width="38dp"
        android:layout_height="31dp"
        android:background="#000000"
        android:scaleX="1.4"
        android:scaleY="1.4"
        app:tint="#C8C2CE"
        app:layout_constraintBottom_toBottomOf="@+id/v60_background"
        app:layout_constraintEnd_toStartOf="@+id/lockButton"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="@+id/v60_background"
        app:layout_constraintTop_toTopOf="@+id/v60_background"
        app:layout_constraintVertical_bias="0.933"
        app:srcCompat="@android:drawable/ic_lock_power_off" />


    <TextView
        android:id="@+id/carNameTextView"
        android:layout_width="93dp"
        android:layout_height="33dp"
        android:text="My V60"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintBottom_toTopOf="@+id/v60_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.091"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <TextView
        android:id="@+id/locationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantorp |"
        app:layout_constraintBottom_toTopOf="@+id/v60_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carNameTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/degreesTextView"
        android:layout_width="31dp"
        android:layout_height="18dp"
        android:text="-5Â°C"
        app:layout_constraintBottom_toTopOf="@+id/v60_background"
        app:layout_constraintEnd_toEndOf="@+id/coordinatorLayout"
        app:layout_constraintStart_toEndOf="@+id/locationTextView"
        app:layout_constraintTop_toBottomOf="@+id/carNameTextView" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-117dp"
        tools:layout_editor_absoluteY="-63dp">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="1dp"
            android:layout_marginTop="672dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="3dp"
            android:alpha="0.2"
            android:background="#0C0C0C"
            android:backgroundTintMode="add"
            app:backgroundTint="#121212"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintCircleRadius="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mapButton"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:tint="#C8C2CE"
            app:backgroundTint="#C8C2CE"
            app:backgroundTintMode="add"
            app:layout_anchor="@+id/bottomAppBar"
            app:layout_anchorGravity="center"
            app:navigationIcon="@android:drawable/ic_menu_mapmode"
            app:rippleColor="#C8C2CE" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>